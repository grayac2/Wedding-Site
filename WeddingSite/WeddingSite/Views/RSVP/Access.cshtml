@model WeddingSite.Models.AccessVM

@{
    ViewData["Title"] = "Access";
}

<h2>Access</h2>

<form asp-action="Access">
    <div class="form-horizontal">
        <h4>RSVP</h4>
        <hr />
        <div class="form-group">
            <label asp-for="strId" class="col-md-2 control-label">Id</label>
            <div class="col-md-10">
                <input type="number" asp-for="strId" class="form-control" />
                <span asp-validation-for="strId" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Submit" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>
